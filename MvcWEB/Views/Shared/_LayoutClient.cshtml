        <div class="btndone" id="check">
            <input type="button" value="Kiểm tra" onclick="Kiemtra()">
        </div>

        @using (Html.BeginForm())
        {
            <fieldset>
                <div class="form-group hidden">
                    @Html.TextBoxFor(model => model.IDQN, new { @class = "form-control", Value = currentSession.ID })
                </div>
                <div class="form-group hidden">
                    @Html.TextBoxFor(model => model.DeSo, new { @class = "form-control", Value = currentSession.DeSo })
                </div>
                <div class="form-group hidden">
                    @Html.TextBoxFor(model => model.TraLoi, new { @class = "form-control" })
                </div>
                <!-- Change this to a button or input when using this as a form -->
                <div class="btndone" id="done">
                    <button type="submit" class="btn btn-lg btn-success btn-block" id="done" onclick="LamXong()">
                        Làm xong
                    </button>
                </div>
                
            </fieldset>
        }
    </div>
