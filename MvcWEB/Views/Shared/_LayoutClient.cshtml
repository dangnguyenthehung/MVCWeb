@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@model MvcWEB.Models.KetQuaModel

@{
    var currentSession = Session["examSession"] as MvcWEB.Code.UserSession;
}
    <div id="begin" class="fullScr">
        <input type="button" value="Bắt đầu" onclick="begin()">
    </div>

    <div id="container">
        @RenderBody()
        @*<div class="btndone" id="done">
