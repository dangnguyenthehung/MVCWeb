@model MvcAdmin.Models.IndividualExamMainModel
@section Styles {
    <link href="@Url.Content("~/Assets/css/individual_page_style.css")" rel="stylesheet" type="text/css" />
}
@{
    List<Model.Framework.ViewIndividualExam> ListSQ = new List<Model.Framework.ViewIndividualExam>();
    List<Model.Framework.ViewIndividualExam> ListQNCN = new List<Model.Framework.ViewIndividualExam>();
    List<Model.Framework.ViewIndividualExam> ListHSQ_TS = new List<Model.Framework.ViewIndividualExam>();
    List<Model.Framework.ViewIndividualExam> ListHSQ_TT = new List<Model.Framework.ViewIndividualExam>();
    List<Model.Framework.ViewIndividualExam> ListHSQ_dB_BD = new List<Model.Framework.ViewIndividualExam>();
    foreach (var item in Model.ListView)
    {
        if (item.ThanhPhan == "SQ")
        {
            ListSQ.Add(item);
        }
        else if (item.ThanhPhan == "QNCN")
        {
            ListQNCN.Add(item);
        }
        else
        {
            if (item.DonVi == "cTS")
            {
                ListHSQ_TS.Add(item);
            }
            else if (item.DonVi == "cTT")
            {
                ListHSQ_TT.Add(item);
            }
            else
            {
                ListHSQ_dB_BD.Add(item);
            }
        }
    }
}

@{
    ViewBag.Title = "Cấp đề riêng";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>@ViewBag.title</h2>

<div class="refreshAll">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <fieldset>
            <div class="form-control hidden">
                @Html.TextBoxFor(model => model.ListObj, new { @class = "form-control", Value = 0 })
            </div>
            <div class="form-control hidden">
                @Html.TextBoxFor(model => model.Action, new { @class = "form-control", Value = "RefreshAll" })
            </div>
            <button type="submit" class="btn btn-default">
                Refresh All
            </button>
        </fieldset>
    }
</div>
<ul class="nav nav-tabs individual">
    <li class="active"><a data-toggle="tab" href="#SQ">SQ</a></li>
    <li><a data-toggle="tab" href="#QNCN">QNCN</a></li>
    <li><a data-toggle="tab" href="#HSQ_TS">HSQ-cTS</a></li>
