@model MvcAdmin.Models.PermissionMainModel

@{
    List<Model.Framework.ViewPermission> List_SQ = new List<Model.Framework.ViewPermission>();
    List<Model.Framework.ViewPermission> List_QNCN = new List<Model.Framework.ViewPermission>();
    List<Model.Framework.ViewPermission> List_HSQ = new List<Model.Framework.ViewPermission>();
    List<Model.Framework.ViewPermission> List_BS = new List<Model.Framework.ViewPermission>();

    foreach (var item in Model.PermissionList)
    {
        if (item.ThanhPhan == "SQ")
        {
            List_SQ.Add(item);
        }
        else if (item.ThanhPhan == "QNCN")
        {
            List_QNCN.Add(item);
        }
        else
        {
            if (item.CB != "B1" && item.CB != "B2")
            {
                List_HSQ.Add(item);
            }
            else
            {
                List_BS.Add(item);
            }
        }
    }
}

@{
    ViewBag.Title = "Cấp quyền truy cập";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>@ViewBag.title</h2>

<div class="refreshAll">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <fieldset>
            <div class="form-control hidden">
                @Html.TextBoxFor(model => model.CaptID, new { @class = "form-control", Value = 0 })
            </div>
            <div class="form-control hidden">
                @Html.TextBoxFor(model => model.Action, new { @class = "form-control", Value = "Refresh" })
            </div>
            <button type="submit" class="btn btn-default">
                Refresh All
            </button>
        </fieldset>
    }
</div>
