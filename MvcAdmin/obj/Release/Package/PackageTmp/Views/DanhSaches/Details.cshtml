@model MvcAdmin.Models.DanhSachMainModel
@{
    ViewBag.Title = "Chi tiết";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<h2>@ViewBag.Title</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Họ tên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.user.HoTen)
        </dd>

        <dt>
            Cấp bậc
        </dt>

        <dd>
            @Html.DisplayFor(model => model.user.CB)
        </dd>

        <dt>
            Chức vụ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.user.CV)
        </dd>

        <dt>
            Đơn vị
        </dt>

        <dd>
            @Html.DisplayFor(model => model.user.DonVi)
        </dd>

        <dt>
            Thành phần
        </dt>

        <dd>
            @Html.DisplayFor(model => model.user.ThanhPhan)
        </dd>

    </dl> 
    <h3>Lịch sử kiểm tra:</h3>
    <table class="table">
        <tr>
            <th>
                Ngày Kiểm tra
            </th>
            <th>
                Đề Số
            </th>
            <th>
                Điểm
            </th>
            <th>
                Xếp loại
            </th>
            <th>
                
            </th>
        </tr>

        @foreach (var item in Model.listKQ)
        {
            <tr class="table-row" id="r">                
                <td>
                    @Html.DisplayFor(modelItem => item.NgayKT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeSo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KQ)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.XepLoai)
                </td>
                <td>
                    <div class="IDcontain">
                        <button type="submit" class="btn btn-delete" value="Delete">
                            @Html.ActionLink( "Xóa", "Delete", new { IDKQ = item.IDKQ , IDQN = item.IDQN})
                        </button>
                    </div>
                </td>
                
            </tr>
        }

    </table>
</div>
<p>
    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.user.IDQN }) |
    @Html.ActionLink("Trở lại Danh sách", "Index")
</p>
