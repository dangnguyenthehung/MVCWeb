@model IEnumerable<Model.Framework.DanhSach>
    @{ 
        List<Model.Framework.DanhSach> ListSQ = new List<Model.Framework.DanhSach>();
        List<Model.Framework.DanhSach> ListQNCN = new List<Model.Framework.DanhSach>();
        List<Model.Framework.DanhSach> ListHSQ_TS = new List<Model.Framework.DanhSach>();
        List<Model.Framework.DanhSach> ListHSQ_TT = new List<Model.Framework.DanhSach>();
        List<Model.Framework.DanhSach> ListHSQ_dB_BD = new List<Model.Framework.DanhSach>();
        foreach (var item in Model)
        {
            if (item.ThanhPhan == "SQ")
            {
                ListSQ.Add(item);
            }
            else if (item.ThanhPhan == "QNCN")
            {
                ListQNCN.Add(item);
            }
            else
            {
                if (item.DonVi == "cTS")
                {
                    ListHSQ_TS.Add(item);
                }
                else if (item.DonVi == "cTT")
                {
                    ListHSQ_TT.Add(item);
                }
                else
                {
                    ListHSQ_dB_BD.Add(item);
                }
            }
        }
    }

