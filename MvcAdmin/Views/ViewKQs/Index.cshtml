@model MvcAdmin.Models.StatisticMainModel
    @{
        List<Model.Framework.ViewKQ> list_SQ = new List<Model.Framework.ViewKQ>();
        List<Model.Framework.ViewKQ> list_QNCN = new List<Model.Framework.ViewKQ>();
        List<Model.Framework.ViewKQ> list_HSQ = new List<Model.Framework.ViewKQ>();
        List<Model.Framework.ViewKQ> list_BS = new List<Model.Framework.ViewKQ>();

        foreach (var item in Model.listKQ)
        {
            if (item.ThanhPhan == "SQ")
            {
                list_SQ.Add(item);
            }
            else if (item.ThanhPhan == "QNCN")
            {
                list_QNCN.Add(item);
            }
            else
            {
                if (item.CB != "B1" && item.CB != "B2")
                {
                    list_HSQ.Add(item);
                }
                else
                {
                    list_BS.Add(item);
                }
            }
        }

        // select month
        var selectList = new SelectList(
        new List<SelectListItem>
        {
            new SelectListItem {Text = "Tháng 1", Value = "1"},
            new SelectListItem {Text = "Tháng 2", Value = "2"},
            new SelectListItem {Text = "Tháng 3", Value = "3"},
            new SelectListItem {Text = "Tháng 4", Value = "4"},
            new SelectListItem {Text = "Tháng 5", Value = "5"},
            new SelectListItem {Text = "Tháng 6", Value = "6"},
            new SelectListItem {Text = "Tháng 7", Value = "7"},
            new SelectListItem {Text = "Tháng 8", Value = "8"},
            new SelectListItem {Text = "Tháng 9", Value = "9"},
            new SelectListItem {Text = "Tháng 10", Value = "10"},
            new SelectListItem {Text = "Tháng 11", Value = "11"},
            new SelectListItem {Text = "Tháng 12", Value = "12"}
        }, "Value", "Text");
    }

@{
    ViewBag.Title = "Tổng Hợp Kết Quả";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2 class="col-lg-8 col-xs-6">@ViewBag.title</h2>
<div class="col-lg-4 col-xs-6 selectContain">
    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
            <div class="form-group col-xs-6">
                @Html.DropDownListFor(m => m.month, selectList, "Tháng...", new { @class = "col-xs-12 selection" })
            </div>
                
            <div class="form-group col-xs-6">
              <div class="col-md-offset-2 col-md-10">
                 <input type="submit" value="Xem kết quả" class="btn btn-default" />
              </div>
            </div>
        </div> 
    }
</div>
