@model IEnumerable<Model.Framework.ViewKQ>
    @{ 
        List<Model.Framework.ViewKQ> list_SQ = new List<Model.Framework.ViewKQ>();
        List<Model.Framework.ViewKQ> list_QNCN = new List<Model.Framework.ViewKQ>();
        List<Model.Framework.ViewKQ> list_HSQ_TS = new List<Model.Framework.ViewKQ>();
        List<Model.Framework.ViewKQ> list_HSQ_TT = new List<Model.Framework.ViewKQ>();
        List<Model.Framework.ViewKQ> list_HSQ_dB_BD = new List<Model.Framework.ViewKQ>();

        foreach (var item in Model)
        {
            if (item.ThanhPhan == "SQ")
            {
                list_SQ.Add(item);
            }
            else if (item.ThanhPhan == "QNCN")
            {
                list_QNCN.Add(item);
            }
            else
            {
                if (item.DonVi == "cTS")
                {
                    list_HSQ_TS.Add(item);
                }
                else if (item.DonVi == "cTT")
                {
                    list_HSQ_TT.Add(item);
                }
                else
                {
                    list_HSQ_dB_BD.Add(item);
                }
            }
        }
    }

